---
// src/pages/cotizacion.astro
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BrandLogos from '../components/BrandLogos.astro'; // <-- NUEVO IMPORT
import WhatsAppButton from '../components/WhatsAppButton.astro'; // <-- AÑADE ESTA LÍNEA
// No necesitamos SITE_TITLE ni SITE_DESCRIPTION en esta página,
// ya que usamos pageTitle y pageDescription directamente.
// Si los quieres mantener, asegúrate de que 'consts' exista y los exporte.
// Por simplicidad, los he quitado del import si no se usan.
// Si tu BaseHead los requiere, déjalos. Por ahora, los quito para evitar el error.

const pageTitle = "Solicita una Cotización";
const pageDescription = "Envíanos los detalles de tu proyecto o servicio requerido y en servicios electromecanicos SCJ te responderemos con una cotización personalizada.";
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead title={pageTitle} description={pageDescription} />
    </head>
    <body>
        <div class="watermark-logo"></div>
        <Header />
        <main>
            <h1>{pageTitle}</h1>
            <p>{pageDescription}</p>

            <section>
                <h2>Solicita tu Cotización por Tipo de Servicio</h2>
                <p>Haz clic en el botón correspondiente al tipo de servicio que te interesa para acceder a nuestro formulario de cotización detallado:</p>

                <div class="quotation-buttons-grid">
                    <a href="https://forms.gle/tZ3fzDoojZF3PrQXA" target="_blank" rel="noopener noreferrer" class="quotation-button">
                        {/* Icono para Motores */}
                        <img src="/Imagenes/embobinados/motor 3.jpeg" alt="Icono de Motores" class="button-icon" loading="lazy" />
                        Motores
                    </a>
                    <a href="https://forms.gle/nMsQasjA799bDRFs7" target="_blank" rel="noopener noreferrer" class="quotation-button">
                        {/* Icono para Seguridad Electrónica */}
                        <img src="/Imagenes/seguridad-electronica/camara.jpeg" alt="Icono de Seguridad Electrónica" class="button-icon" loading="lazy" />
                        Seguridad Electrónica
                    </a>
                    <a href="https://forms.gle/CTJgvCjBrDSersW79" target="_blank" rel="noopener noreferrer" class="quotation-button">
                        {/* Icono para Compresores de aire */}
                        <img src="/Imagenes/compresores/compresor1.jpeg" alt="Icono de Compresores de aire" class="button-icon" loading="lazy" />
                        Compresores de aire
                    </a>
                    <a href="https://forms.gle/HPsu2Chi9Ywvijd58" target="_blank" rel="noopener noreferrer" class="quotation-button">
                        {/* Icono para Compresores Herméticos */}
                        <img src="/Imagenes/compresores/compresor3.jpeg" alt="Icono de Compresores Herméticos" class="button-icon" loading="lazy" />
                        Compresores Herméticos
                    </a>
                </div>

                <p class="note-text">Serás redirigido a una nueva ventana para completar el formulario de Google Forms.</p>
            </section>

           {/* --- INSERTA EL COMPONENTE DE LOGOS DE MARCA AQUÍ --- */}
            <BrandLogos title="Marcas de Equipos que Atendemos" /> {/* Puedes personalizar el título */}
            {/* --- FIN DEL COMPONENTE DE LOGOS DE MARCA --- */}
            
        </main>
        <Footer />
        <WhatsAppButton /> {/* <-- AÑADE ESTA LÍNEA AQUÍ */}
    </body>
</html>

<style>
    /* Estilos generales de la sección (ya los tenías) */
    section {
        background-color: var(--color-blanco);
        color: var(--color-texto-oscuro);
        padding: 2rem;
        margin-bottom: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h1, h2 {
        color: var(--color-rojo-acento);
    }

    /* --- INICIO: ESTILOS PARA LOS BOTONES DE COTIZACIÓN --- */
    .quotation-buttons-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
        justify-content: center;
    }

    .quotation-button {
        background-color: var(--color-rojo-acento);
        color: var(--color-blanco);
        padding: 1.5rem;
        border-radius: 10px;
        text-decoration: none;
        font-weight: bold;
        font-size: 1.3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .quotation-button:hover {
        background-color: #CC0000;
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    }

    /* ¡IMPORTANTE! Este es el estilo que controla el tamaño de las imágenes dentro de los botones */
    .quotation-button .button-icon {
        width: 70px;   /* Aumentado ligeramente para que se vean mejor */
        height: 70px;  /* La altura debe ser la misma que el ancho para que sea un cuadrado */
        object-fit: contain; /* Esto es CLAVE: ajusta la imagen dentro de las dimensiones sin recortar */
        margin-bottom: 0.8rem; /* Un poco más de espacio entre el icono y el texto */
        border-radius: 5px; /* Bordes ligeramente redondeados para las imágenes */
    }

    .note-text {
        text-align: center;
        margin-top: 2rem;
        font-style: italic;
        color: var(--color-texto-oscuro);
    }

    @media (max-width: 768px) {
        .quotation-buttons-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
