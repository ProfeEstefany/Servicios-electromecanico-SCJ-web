---
// src/components/Header.astro
// No necesitamos importar nada aquí por ahora, ya que el logo es estático.
---
<header>
    <div class="header-container">
        <a href="/">
            <img src="/logo-scj.png" alt="Servicios Electromecánicos SCJ Logo" class="site-logo" />
        </a>
        <nav>
            <ul>
                <li><a href="/nuestros-servicios">Nuestros Servicios</a></li>
                <li><a href="/embobinados">Embobinados</a></li>
                <li><a href="/compresores">Compresores</a></li>
                <li><a href="/seguridad-electronica">Seguridad Electrónica</a></li>
                <li><a href="/contactanos">Contáctanos</a></li>
                <li><a href="/cotizacion">Cotización</a></li>
                <li><a href="/blog">Blog/Notas</a></li>
            </ul>
        </nav>
    </div>
</header>

<style>
    /* Estilos específicos para el encabezado y la navegación */
    header {
        width: 100%;
        background-color: rgba(0, 0, 0, 0.2); /* Fondo semitransparente para que destaque */
        padding: 1rem 0;
        position: relative;
        z-index: 10; /* Asegura que el encabezado esté por encima de las curvas */
    }

    .header-container {
        max-width: 1200px; /* Ancho máximo del contenido del encabezado */
        margin: 0 auto; /* Centrar el contenido */
        display: flex;
        justify-content: space-between; /* Alinea el logo a la izquierda y el nav a la derecha */
        align-items: center;
        padding: 0 2rem; /* Espacio a los lados */
    }

    .site-logo {
        height: 60px; /* Ajusta el tamaño de tu logo. Por ejemplo, 60px */
        width: auto;
    }

    nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex; /* Para que los enlaces estén en línea */
    }

    nav li {
        margin-left: 2rem; /* Espacio entre los enlaces del menú */
    }

    nav a {
        color: var(--color-blanco);
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s ease; /* Transición suave al pasar el ratón */
        font-size: 1.1rem;
    }

    nav a:hover {
        color: var(--color-rojo-acento); /* Cambia a rojo al pasar el ratón */
    }

    /* Responsive Design: Para pantallas más pequeñas */
    @media (max-width: 768px) {
        .header-container {
            flex-direction: column; /* Coloca logo y nav uno encima del otro */
            padding: 1rem;
        }

        nav ul {
            flex-direction: column; /* Apila los enlaces del menú */
            margin-top: 1rem;
        }

        nav li {
            margin: 0.5rem 0; /* Espacio vertical entre enlaces */
        }
    }
</style>