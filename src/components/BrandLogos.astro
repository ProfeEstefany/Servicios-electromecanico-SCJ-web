<style>
    /* Estilos para la sección de marcas */
    .brands-section {
        background-color: var(--color-blanco);
        color: var(--color-texto-oscuro);
        padding: 2rem;
        margin-bottom: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center; /* Centra el título */
    }

    .brands-section h2 {
        color: var(--color-rojo-acento);
        margin-bottom: 1.5rem;
    }

    .brands-list {
        display: flex;
        flex-wrap: wrap; /* Permite que los logos se envuelvan en varias líneas */
        justify-content: center; /* Centra los logos */
        align-items: center; /* Centra los logos verticalmente */
        gap: 1.5rem; /* Espacio entre los logos */
        padding: 1rem;
    }

    .brands-list img {
        max-height: 45px; /* Altura máxima para los logos. Ajusta si es necesario */
        width: auto; /* Ancho automático para mantener la proporción */
        object-fit: contain; /* Asegura que el logo se vea completo */
        filter: grayscale(100%); /* Opcional: convierte los logos a escala de grises */
        opacity: 0.7; /* Opcional: los hace un poco más sutiles */
        transition: filter 0.3s ease, opacity 0.3s ease;
    }

    .brands-list img:hover {
        filter: grayscale(0%); /* Opcional: los vuelve a su color original al pasar el ratón */
        opacity: 1; /* Opcional: los hace completamente visibles al pasar el ratón */
    }

    /* Media query para pantallas más pequeñas */
    @media (max-width: 768px) {
        .brands-list {
            gap: 1rem; /* Reduce el espacio en móviles */
        }
        .brands-list img {
            max-height: 35px; /* Reduce el tamaño de los logos en móviles */
        }
    }
</style>